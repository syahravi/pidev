---
import BaseLayout from '../layouts/BaseLayout.astro';
import { portfolioStory } from '../content/site';
import CtaSection from '../components/sections/CtaSection.svelte';
---

<BaseLayout
  title="Portfolio"
  description="Lihat portfolio website yang sudah kami kerjakan untuk berbagai klien di Bogor dan sekitarnya."
>
  <!-- Page Header -->
  <section class="gradient-hero pt-32 pb-16">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold text-white">Cerita Sukses</h1>
      <p class="mt-4 text-lg text-white/80 max-w-2xl mx-auto">
        {portfolioStory.subtitle}
      </p>
    </div>
  </section>

  <!-- Portfolio Grid -->
  <section class="section-padding">
    <div class="container-custom">
      {portfolioStory.items.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {portfolioStory.items.map((story) => (
            <div class="card">
              <!-- Header -->
              <div class="flex items-center gap-3 mb-4">
                <span class="text-3xl">{story.emoji}</span>
                <div>
                  <span class="inline-block px-2 py-1 bg-primary-50 text-primary-600 text-xs font-semibold rounded-full mb-1">
                    {story.niche}
                  </span>
                  <h3 class="font-bold text-ink">{story.businessName}</h3>
                  <p class="text-sm text-ink-soft">{story.location}</p>
                </div>
              </div>

              <!-- Problem & Result -->
              <div class="space-y-3 mb-4">
                <div class="flex items-start gap-2">
                  <span class="text-red-500 mt-1">&#x1F614;</span>
                  <p class="text-sm text-ink-mid">{story.problem}</p>
                </div>
                <div class="flex items-start gap-2">
                  <span class="text-success mt-1">&#x2728;</span>
                  <p class="text-sm text-ink font-medium">{story.result}</p>
                </div>
              </div>

              <!-- Quote -->
              <blockquote class="border-l-4 border-primary-600 pl-4 py-2 bg-primary-50 rounded-r-lg">
                <p class="text-sm text-ink-mid italic">"{story.quote}"</p>
              </blockquote>

              <!-- Rating -->
              <div class="flex items-center gap-1 mt-4">
                {[...Array(story.rating)].map(() => (
                  <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
              </div>
            </div>
          ))}
        </div>
      ) : (
        <!-- Empty state -->
        <div class="text-center py-16 bg-cream rounded-2xl border-2 border-dashed border-secondary-200">
          <span class="text-5xl mb-4 block">&#x1F4DA;</span>
          <h3 class="text-2xl font-bold text-ink mb-2">Cerita Sukses Segera Hadir</h3>
          <p class="text-ink-mid max-w-md mx-auto">
            Kami sedang mengumpulkan cerita sukses dari klien-klien kami.
            Hubungi kami untuk menjadi bagian dari cerita sukses berikutnya!
          </p>
        </div>
      )}

      {portfolioStory.items.length > 0 && (
        <p class="text-center text-ink-soft mt-8">{portfolioStory.closingText}</p>
      )}
    </div>
  </section>

  <CtaSection client:visible />
</BaseLayout>
