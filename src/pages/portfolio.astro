---
import BaseLayout from '../layouts/BaseLayout.astro';
import { portfolio } from '../content/site';
import CtaSection from '../components/sections/CtaSection.svelte';
---

<BaseLayout
  title="Portfolio"
  description="Lihat portfolio website yang sudah kami kerjakan untuk berbagai klien di Bogor dan sekitarnya."
>
  <!-- Page Header -->
  <section class="gradient-hero pt-32 pb-16">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white">Portfolio</h1>
      <p class="mt-4 text-lg text-white/80 max-w-2xl mx-auto">
        {portfolio.subtitle}
      </p>
    </div>
  </section>

  <!-- Portfolio Grid -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {portfolio.items.map((item) => (
          <div class="card group overflow-hidden p-0">
            <div class="aspect-video overflow-hidden">
              <img
                src={item.image}
                alt={item.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                width="600"
                height="400"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <span class="text-xs font-semibold text-primary-600 uppercase tracking-wider">{item.category}</span>
              <h3 class="mt-2 text-lg font-bold text-secondary-900">{item.title}</h3>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CtaSection />
</BaseLayout>
