---
import BaseLayout from '../layouts/BaseLayout.astro';
import Pricing from '../components/sections/Pricing.svelte';
import Features from '../components/sections/Features.svelte';
import FAQ from '../components/sections/FAQ.svelte';
import CtaSection from '../components/sections/CtaSection.svelte';
---

<BaseLayout
  title="Harga"
  description="Harga pembuatan website profesional mulai dari Rp 150.000. Transparan, terjangkau, dan berkualitas."
>
  <!-- Page Header -->
  <section class="gradient-hero pt-32 pb-16">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white">Harga</h1>
      <p class="mt-4 text-lg text-white/80 max-w-2xl mx-auto">
        Harga transparan tanpa biaya tersembunyi
      </p>
    </div>
  </section>

  <Pricing client:visible />
  <Features />
  <FAQ client:visible />
  <CtaSection />
</BaseLayout>
